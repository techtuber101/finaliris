# Local Development Environment Configuration
# Copy this file to .env.local and adjust values as needed

# Environment Mode - Set to 'local' for localhost development
NEXT_PUBLIC_ENV_MODE=local

# Frontend URL (localhost for local development)
NEXT_PUBLIC_URL=http://localhost:3000

# Backend API URL (localhost for local development)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000/api

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Optional: Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# Optional: PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=

# Admin API Key
KORTIX_ADMIN_API_KEY=

# Optional: Edge Config
EDGE_CONFIG=
